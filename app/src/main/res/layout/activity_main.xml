<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/topMid"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/my_grey"
        android:fontFamily="sans-serif-thin"
        android:onClick="press"
        android:outlineProvider="none"
        android:soundEffectsEnabled="false"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/centerMid"
        app:layout_constraintEnd_toStartOf="@+id/topRight"
        app:layout_constraintStart_toEndOf="@+id/topLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/topRight"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/my_grey"
        android:fontFamily="sans-serif-thin"
        android:onClick="press"
        android:outlineProvider="none"
        android:soundEffectsEnabled="false"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/centerRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/centerMid"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/my_grey"
        android:fontFamily="sans-serif-thin"
        android:onClick="press"
        android:outlineProvider="none"
        android:soundEffectsEnabled="false"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/bottomMid"
        app:layout_constraintEnd_toStartOf="@+id/centerRight"
        app:layout_constraintStart_toEndOf="@+id/centerLeft"
        app:layout_constraintTop_toBottomOf="@+id/topMid" />

    <Button
        android:id="@+id/centerRight"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/my_grey"
        android:fontFamily="sans-serif-thin"
        android:onClick="press"
        android:outlineProvider="none"
        android:soundEffectsEnabled="false"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/bottomRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topRight" />

    <Button
        android:id="@+id/bottomMid"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="226dp"
        android:backgroundTint="@color/my_grey"
        android:fontFamily="sans-serif-thin"
        android:onClick="press"
        android:outlineProvider="none"
        android:soundEffectsEnabled="false"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottomRight"
        app:layout_constraintStart_toEndOf="@+id/bottomLeft"
        app:layout_constraintTop_toBottomOf="@+id/centerMid" />

    <Button
        android:id="@+id/bottomRight"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="226dp"
        android:backgroundTint="@color/my_grey"
        android:fontFamily="sans-serif-thin"
        android:onClick="press"
        android:outlineProvider="none"
        android:soundEffectsEnabled="false"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centerRight" />

    <Button
        android:id="@+id/bottomLeft"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="226dp"
        android:backgroundTint="@color/my_grey"
        android:fontFamily="sans-serif-thin"
        android:onClick="press"
        android:outlineProvider="none"
        android:soundEffectsEnabled="false"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centerLeft" />

    <Button
        android:id="@+id/centerLeft"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/my_grey"
        android:fontFamily="sans-serif-thin"
        android:onClick="press"
        android:outlineProvider="none"
        android:soundEffectsEnabled="false"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/bottomLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLeft" />

    <Button
        android:id="@+id/topLeft"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="175dp"
        android:backgroundTint="@color/my_grey"
        android:fontFamily="sans-serif-thin"
        android:onClick="press"
        android:outlineProvider="none"
        android:soundEffectsEnabled="false"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/centerLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="127dp"
        android:fontFamily="sans-serif-thin"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="sans-serif-thin"
        android:onClick="restartActivity"
        android:text="Restart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomMid" />

    <TextView
        android:id="@+id/madeByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-thin"
        android:text="By Davide Soldatini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>